<%= form_for(@user) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %> <br>

	<%= f.label :email %>
	<%= f.text_field :email %> <br>

	<%= f.label "Resume URL" %>
	<%= f.text_field :resume_url %> <br>

	<%= f.label "Looking for..." %>
	<%= f.text_area :looking_for %> <br>

	<%= f.label :group %>
	<%= f.collection_select(:group_id, Group.all, :id, :name) %>

	<%= f.submit %>
<% end %>
